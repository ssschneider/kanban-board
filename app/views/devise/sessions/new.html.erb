<section class="w-full mt-28 mx-auto flex flex-col justify-center items-center gap-10">
  <h2 class="font-medium text-3xl">Log in</h2>

  <div class="w-lg flex flex-col">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="flex flex-col w-full gap-2">
        <%= f.label :email, class: "text-sm font-medium" %>
        <%= f.email_field :email, autofocus: true, class: "w-full border border-white rounded px-3 py-2 bg-transparent", autocomplete: "email" %>
      </div>

      <br/>

      <div class="flex flex-col w-full gap-2">
        <%= f.label :password, class: "text-sm font-medium" %>
        <%= f.password_field :password, class: "w-full border border-white rounded px-3 py-2 bg-transparent", autocomplete: "current-password" %>
      </div>

      <br/>

      <% if devise_mapping.rememberable? %>
        <div class="flex w-full gap-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <br/>

      <div class="actions w-full">
        <%= f.submit "Log in", class: "w-full bg-white text-slate-950 px-4 py-2 rounded hover:cursor-pointer hover:opacity-75" %>
      </div>
    <% end %>
  </div>
</section>
